{
  "name": "doc-crawler",
  "version": "1.0.0",
  "description": "A MCP-based documentation crawler service",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "crawl": "node scripts/crawl.js",
    "dev": "node --watch server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --forceExit",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": [
    "crawler",
    "documentation",
    "puppeteer",
    "nodejs",
    "mcp",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.18.2",
    "puppeteer": "^22.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/doc-crawler.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/doc-crawler/issues"
  },
  "homepage": "https://github.com/yourusername/doc-crawler#readme"
